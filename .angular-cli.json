{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "brcap-view-components"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": ["assets", "favicon.ico"],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css",
        "../node_modules/bootstrap/dist/css/bootstrap.css",
        "../node_modules/font-awesome/css/font-awesome.min.css",
        "../node_modules/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css",
        "../src/assets/css/iconmoon.css",
        "../src/assets/css/brcap-ico.css",
        "../src/assets/css/brcap.css",
        "../src/assets/css/hamburgers.css",
        "../src/assets/css/font-awesome.min.css",
        "../src/assets/css/bootstrap-select.min.css",
        "../src/assets/css/dragtable.css"
      ],
      "scripts": [
        "../node_modules/jquery/dist/jquery.js",
        "../node_modules/jquery-mask-plugin/dist/jquery.mask.js",
        "../node_modules/bootstrap/dist/js/bootstrap.js",
        "../src/assets/js/bootstrap-datepicker.js",
        "../src/assets/js/bootstrap-datepicker.pt-BR.js",
        "../src/assets/js/bootstrap-select.min.js",        
        "../src/assets/js/jquery-ui.min.js",
        "../src/assets/js/jquery.dragtable.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
